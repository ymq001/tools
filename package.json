{
  "name": "base-project",
  "version": "1.0.0",
  "description": "项目基础库、组件整理",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "createdoc": "node_modules/.bin/jsdoc ./src/ReadMe.md -c jsdoc.conf",
    "cleardoc": "webpack --mode=production --config webpack.docClear.config.js",
    "doc": "yarn cleardoc && yarn createdoc",
    "prod": "webpack --mode=production --config webpack.umd.config.js",
    "prod:lib": "cross-env NODE_LIB=production webpack --mode=production --config webpack.umd.config.js",
    "dev": "webpack --mode=development --config webpack.umd.config.js",
    "dev:lib": "cross-env NODE_LIB=production webpack --mode=development --config webpack.umd.config.js",
    "start": "yarn dev && yarn doc",
    "lib": "yarn dev:lib && yarn doc",
    "lib:prod": "yarn prod:lib && yarn doc"
  },
  "dependencies": {
    "babel-core": "^6.22.1",
    "babel-loader": "^7.1.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.2.0",
    "docdash": "^1.0.0",
    "glob": "^7.1.3",
    "jsdoc": "^3.5.5",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  }
}
